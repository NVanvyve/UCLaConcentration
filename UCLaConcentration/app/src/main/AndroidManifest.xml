<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="groupe.onze.uclaconcentration">
    import com.facebook.FacebookSdk;
    <uses-permission
        android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_school_black_24dp"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
    <meta-data
        android:name="com.facebook.sdk.ApplicationId"
        android:value="@string/facebook_app_id" />

        <activity android:name=".MainActivity"
            android:launchMode="singleTask"
            android:label="UCLaConcentration">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="groupe.onze.uclaconcentration.CommunicationService.action.ACTIVITY_STATUS_UPDATE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AdeActivity"
            android:label="@string/title_activity_ade"

            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Facebook_Activity"
            android:label="Facebook"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Connexion"
            android:launchMode="singleTask"
            android:label="Connexion Ã  Facebook"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".PrefsActivity"
            android:launchMode="singleTask"
            android:label="@string/title_activity_prefs"
            android:theme="@style/AppTheme.NoActionBar" />
        <service
            android:launchMode="singleTask"
            android:name=".TimerService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:launchMode="singleTask"
            android:label="@string/title_activity_store"
            android:name=".StoreActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />

        <service
            android:launchMode="singleTask"
            android:name=".SensorService"
            android:enabled="true"
            android:exported="true">
        </service>
    </application>
</manifest>
